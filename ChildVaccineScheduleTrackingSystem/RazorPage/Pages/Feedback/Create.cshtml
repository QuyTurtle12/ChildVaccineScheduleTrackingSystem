@page
@model RazorPage.Pages.Feedback.CreateModel

@{
    ViewData["Title"] = "Create Feedback";
}

<h1>Create Feedback</h1>

<h4>Feedback</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Feedback.Rating" class="control-label"></label>
                <input asp-for="Feedback.Rating" min="1" max="5" />
               
            <div class="form-group">
                <label asp-for="Feedback.Comment">Comment</label>
                <input asp-for="Feedback.Comment" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Feedback.UserId">User ID (GUID)</label>
                <input asp-for="Feedback.UserId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Feedback.AppointmentId">Appointment ID (GUID)</label>
                <input asp-for="Feedback.AppointmentId" class="form-control"  />
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}