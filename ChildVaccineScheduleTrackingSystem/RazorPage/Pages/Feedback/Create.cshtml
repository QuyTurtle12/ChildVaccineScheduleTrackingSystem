@page
@model RazorPage.Pages.Feedback.CreateModel
@{
    ViewData["Title"] = "Tạo Phản hồi - Trung tâm Vaccine";
}



<!-- Nội dung chính -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card lively-card animate__animated animate__fadeIn">
                <div class="card-body">
                    <h1 class="text-center text-vibrant mb-4 animate__animated animate__bounceIn">
                        <i class="fas fa-comment-alt mr-2"></i>Tạo Phản hồi
                    </h1>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group">
                            <label asp-for="Feedback.Rating" class="font-weight-bold">Đánh giá (1-5)</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-star"></i></span>
                                </div>
                                <input asp-for="Feedback.Rating" class="form-control" type="number" min="1" max="5" />
                            </div>
                            <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Feedback.Comment" class="font-weight-bold">Bình luận</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-comment"></i></span>
                                </div>
                                <textarea asp-for="Feedback.Comment" class="form-control" rows="5" placeholder="Nhập bình luận của bạn"></textarea>
                            </div>
                            <span asp-validation-for="Feedback.Comment" class="text-danger"></span>
                        </div>
                        <div class="form-group" hidden>
                            <input asp-for="Feedback.UserId" class="form-control" />
                        </div>
                        <div class="form-group" hidden>
                            <input asp-for="Feedback.AppointmentId" class="form-control" />
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg animate__animated animate__pulse animate__infinite">
                                <i class="fas fa-save mr-2"></i>Tạo mới
                            </button>
                            <a asp-page="/Appointments/Index" class="btn btn-secondary ml-2"><i class="fas fa-arrow-left mr-2"></i>Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

