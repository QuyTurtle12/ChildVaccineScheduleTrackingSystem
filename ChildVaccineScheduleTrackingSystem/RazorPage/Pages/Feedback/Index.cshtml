@page
@model RazorPage.Pages.Feedback.IndexModel

@{
    ViewData["Title"] = "Feedback List";
}

<h1>Feedback List</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Rating
            </th>
            <th>
                Comment
            </th>
            <th>
                User Name
            </th>
            <th>
                Status
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FeedbackList.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-page="./Update" asp-route-id="@item.Id">Update</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @if (Model.FeedbackList != null)
    {
        @if (Model.FeedbackList.HasPreviousPage)
        {
            <a asp-page="./Index" asp-route-pageNumber="@(Model.FeedbackList.PageNumber - 1)" class="btn btn-primary">Previous</a>
        }

        <span>Page @Model.FeedbackList.PageNumber of @Model.FeedbackList.TotalPages</span>

        @if (Model.FeedbackList.HasNextPage)
        {
            <a asp-page="./Index" asp-route-pageNumber="@(Model.FeedbackList.PageNumber + 1)" class="btn btn-primary">Next</a>
        }
    }
</div>