@page
@model RazorPage.Pages.Feedback.IndexModel

@{
    ViewData["Title"] = "Feedback List";
}

<h1>Feedback List</h1>

<!-- Search Form -->
<form method="get" asp-page="./Index">
    <div class="form-group">
        <label for="customerNameSearch">Search by Customer Name:</label>
        <input type="text" id="customerNameSearch" name="customerNameSearch" class="form-control" value="@Model.CustomerNameSearch" style="display:inline; width:auto;" />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-page="./Index" class="btn btn-secondary">Clear</a>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Rating
            </th>
            <th>
                Comment
            </th>
            <th>
                Feedback Time
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FeedbackList.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedTime)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @if (Model.FeedbackList != null)
    {
        @if (Model.FeedbackList.HasPreviousPage)
        {
            <a asp-page="./Index" asp-route-pageNumber="@(Model.FeedbackList.PageNumber - 1)" asp-route-customerNameSearch="@Model.CustomerNameSearch" class="btn btn-primary">Previous</a>
        }

        <span>Page @Model.FeedbackList.PageNumber of @Model.FeedbackList.TotalPages</span>

        @if (Model.FeedbackList.HasNextPage)
        {
            <a asp-page="./Index" asp-route-pageNumber="@(Model.FeedbackList.PageNumber + 1)" asp-route-customerNameSearch="@Model.CustomerNameSearch" class="btn btn-primary">Next</a>
        }
    }
</div>