@page
@model RazorPage.Pages.Feedback.DetailsModel
@{
    ViewData["Title"] = "Chi tiết Phản hồi - Trung tâm Vaccine";
}



<!-- Nội dung chính -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card lively-card animate__animated animate__fadeIn">
                <div class="card-body">
                    <h1 class="text-center text-vibrant mb-4 animate__animated animate__bounceIn">
                        <i class="fas fa-info-circle mr-2"></i>Chi tiết Phản hồi
                    </h1>
                    <dl class="row">
                        <dt class="col-sm-4">Tên khách hàng</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FeedbackDTO.UserName)</dd>
                        <dt class="col-sm-4">Đánh giá</dt>
                        <dd class="col-sm-8">
                            <span class="badge badge-warning">@Html.DisplayFor(model => model.FeedbackDTO.Rating) <i class="fas fa-star"></i></span>
                        </dd>
                        <dt class="col-sm-4">Bình luận</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FeedbackDTO.Comment)</dd>
                        <dt class="col-sm-4">Thời gian tạo</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FeedbackDTO.CreatedTime)</dd>
                    </dl>
                    <div class="text-center mt-4">
                        <a asp-page="./Update" asp-route-id="@Model.FeedbackDTO.Id" class="btn btn-primary mr-2"><i class="fas fa-edit mr-2"></i>Cập nhật</a>
                        <a asp-page="./Index" class="btn btn-secondary"><i class="fas fa-arrow-left mr-2"></i>Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f4f8;
    }

    .navbar {
        background-color: #0078D4 !important;
        color: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .navbar-brand, .nav-link {
        color: white !important;
        transition: color 0.3s;
    }

        .nav-link:hover {
            color: #F28C38 !important;
        }

    .lively-card {
        border: none;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        background-color: white;
        border-radius: 10px;
    }

        .lively-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

    .text-vibrant {
        color: #F28C38;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #0078D4;
        border: none;
        transition: transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #005BB5;
            transform: scale(1.05);
        }

    .badge-warning {
        background-color: #F28C38;
    }

    .footer {
        background-color: #0078D4;
        color: white;
        padding: 20px 0;
        text-align: center;
    }
</style>