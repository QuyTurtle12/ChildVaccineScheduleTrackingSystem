@page
@model RazorPage.Pages.Payments.IndexModel
@{
    ViewData["Title"] = "Index";
    var jwtToken = ViewData["JwtToken"] as string;
    var userRole = ViewData["UserRole"] as string;
}

<form asp-action="Search" method="get" class="mb-5">
    <label for="nameSearch">Search:</label>
    <input type="text" id="searchString" name="searchString" placeholder="Enter search...">
    <input type="hidden" id="pageNumber" name="pageNumber" min="1" value="1">
    <button type="submit">Search</button>
</form>

<a asp-area="" asp-page="./Create">Create Payment</a>

<h1>Payment</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Appointment Name
            </th>
            <th>
                Amount
            </th>
            <th>
                Payment Method
            </th>
            <th>
                Payment Name
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Payments.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentMethod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a class="btn btn-primary" asp-page="./Update" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @if (Model.Payments.HasPreviousPage)
    {
        <a asp-page="/Payments/Index" asp-route-pageNumber="@(Model.Payments.PageNumber - 1)" class="btn btn-primary">Previous</a>
    }

    <span>Page @Model.Payments.PageNumber of @Model.Payments.TotalPages</span>

    @if (Model.Payments.HasNextPage)
    {
        <a asp-page="/Payments/Index" asp-route-pageNumber="@(Model.Payments.PageNumber + 1)" class="btn btn-primary">Next</a>
    }
</div>
