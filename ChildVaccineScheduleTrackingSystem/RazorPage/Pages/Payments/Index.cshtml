@page
@model RazorPage.Pages.Payments.IndexModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Index";
    var jwtToken = ViewData["JwtToken"] as string;
    var userRole = ViewData["UserRole"] as string;
}

<form asp-page="" method="get" class="mb-5 p-4 bg-light rounded shadow">
    <div class="row g-3 align-items-center">
        <!-- Name Search -->
        <div class="col-md-3">
            <label for="nameSearch" class="form-label fw-bold text-secondary">Name</label>
            <input type="text" id="nameSearch" name="nameSearch" class="form-control" placeholder="Enter name..."
                   value="@Model.NameSearch">
        </div>

        <!-- Payment Method Search -->
        <div class="col-md-3">
            <label for="paymentMethodSearch" class="form-label fw-bold text-secondary">Payment Method</label>
            <input type="text" id="paymentMethodSearch" name="paymentMethodSearch" class="form-control" placeholder="e.g., Credit Card"
                   value="@Model.PaymentMethodSearch">
        </div>

        <!-- Amount Range -->
        <div class="col-md-3">
            <label class="form-label fw-bold text-secondary">Amount Range</label>
            <div class="input-group">
                <input type="number" id="fromAmountSearch" name="fromAmountSearch" class="form-control" placeholder="Min"
                       value="@Model.FromAmountSearch">
                <span class="input-group-text">-</span>
                <input type="number" id="toAmountSearch" name="toAmountSearch" class="form-control" placeholder="Max"
                       value="@Model.ToAmountSearch">
            </div>
        </div>

        <!-- Status Search -->
        <div class="col-md-2">
            <label for="statusSearch" class="form-label fw-bold text-secondary">Status</label>
            <select id="statusSearch" name="statusSearch" class="form-select">
                <option value="">All</option>
                <option value="0" selected="@(Model.StatusSearch == 0)">Pending</option>
                <option value="1" selected="@(Model.StatusSearch == 1)">Completed</option>
                <option value="2" selected="@(Model.StatusSearch == 2)">Failed</option>
            </select>
        </div>

        <!-- Search Button -->
        <div class="col-md-1 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100 shadow-sm">
                <i class="fas fa-search"></i> Search
            </button>
        </div>
    </div>

    <!-- Hidden Inputs -->
    <input type="hidden" id="pageNumber" name="pageNumber" value="1">
</form>


<a asp-area="" asp-page="./Create">Create Payment</a>

<h1>Payment</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Appointment Name
            </th>
            <th>
                Amount
            </th>
            <th>
                Payment Method
            </th>
            <th>
                Payment Name
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Payments.Items)
        {
            <tr>
                <td>
                    @* @Html.DisplayFor(modelItem => item.AppointmentId) *@
                    @Html.DisplayFor(modelItem => item.AppointmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentMethod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @if (HttpContextAccessor.HttpContext!.User.IsInRole("Staff"))
                    {
                        <a class="btn btn-primary" asp-page="./Update" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    }
                    @if (HttpContextAccessor.HttpContext!.User.IsInRole("Customer"))
                    {
                        <a class="btn btn-danger" asp-page="./Update" asp-route-id="@item.Id">Cancel</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @if (Model.Payments.HasPreviousPage)
    {
        <a asp-page="/Payments/Index" asp-route-pageNumber="@(Model.Payments.PageNumber - 1)"
           asp-route-nameSearch="@Model.NameSearch"
           asp-route-paymentMethodSearch="@Model.PaymentMethodSearch"
           asp-route-fromAmountSearch="@Model.FromAmountSearch"
           asp-route-toAmountSearch="@Model.ToAmountSearch"
           asp-route-statusSearch="@Model.StatusSearch"
        class="btn btn-primary">Previous</a>
    }

    <span>Page @Model.Payments.PageNumber of @Model.Payments.TotalPages</span>

    @if (Model.Payments.HasNextPage)
    {
        <a asp-page="/Payments/Index" asp-route-pageNumber="@(Model.Payments.PageNumber + 1)"
           asp-route-nameSearch="@Model.NameSearch"
           asp-route-paymentMethodSearch="@Model.PaymentMethodSearch"
           asp-route-fromAmountSearch="@Model.FromAmountSearch"
           asp-route-toAmountSearch="@Model.ToAmountSearch"
           asp-route-statusSearch="@Model.StatusSearch"
        class="btn btn-primary">Next</a>
    }
</div>
