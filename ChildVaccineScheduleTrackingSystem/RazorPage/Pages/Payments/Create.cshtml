@page
@model RazorPage.Pages.Payments.CreateModel
@{
    ViewData["Title"] = "Create";
}
<form method="post" id="createPaymentForm">
    <div class="form-group">
        <label asp-for="Payment.AppointmentId">Appointment Id</label>
        <input asp-for="Payment.AppointmentId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Payment.Amount">Amount</label>
        <input asp-for="Payment.Amount" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Payment.PaymentMethod">Payment method</label>
        <input asp-for="Payment.PaymentMethod" class="form-control"></input>
    </div>
    <div class="form-group">
        <label asp-for="Payment.Name">Payment Name</label>
        <input asp-for="Payment.Name" class="form-control"></input>
    </div>
    <div class="form-group">
        <label asp-for="Payment.Status">Status</label>
        <select asp-for="Payment.Status" asp-items="Model.StatusList" class="form-select form-control-lg border-dark-subtle shadow-sm" id="Status"></select>

    </div>


    <div class="mt-2">
        <button type="submit" class="btn btn-success">Create</button>
        <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}