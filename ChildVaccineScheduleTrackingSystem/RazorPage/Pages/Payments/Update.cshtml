@page
@model RazorPage.Pages.Payments.UpdateModel
@{
    ViewData["Title"] = "Update payment";
}


<div class="modal-body p-5 bg-light-subtle">
    <form method="post">
        @*         @Html.AntiForgeryToken() *@
        <!-- Hidden field for the Appointment ID -->
        <input asp-for="UpdatedPayment.Id" type="hidden" />

        <div class="form-group mb-5" style="display: none">
            <label asp-for="UpdatedPayment.AppointmentId" class="form-label fw-semibold text-dark opacity-75 mb-2">
                <i class="bi bi-tag me-2"></i> Appointment Id
            </label>
            <input asp-for="UpdatedPayment.AppointmentId" class="form-control form-control-lg border-dark-subtle shadow-sm" id="AppointmentDate" placeholder="Enter user" />
            <span asp-validation-for="UpdatedPayment.AppointmentId" class="text-danger small mt-1"></span>
        </div>

        <div class="form-group mb-5">
            <label asp-for="UpdatedPayment.Amount" class="form-label fw-semibold text-dark opacity-75 mb-2">
                <i class="bi bi-tag me-2"></i> Amount
            </label>
            <input asp-for="UpdatedPayment.Amount" class="form-control form-control-lg border-dark-subtle shadow-sm" id="AppointmentDate" placeholder="Enter appointment date" />
            <span asp-validation-for="UpdatedPayment.Amount" class="text-danger small mt-1"></span>
        </div>

        <div class="form-group mb-5">
            <label asp-for="UpdatedPayment.PaymentMethod" class="form-label fw-semibold text-dark opacity-75 mb-2">
                <i class="bi bi-tag me-2"></i> Payment Method
            </label>
            <input asp-for="UpdatedPayment.PaymentMethod" class="form-control form-control-lg border-dark-subtle shadow-sm" id="AppointmentDate" placeholder="Enter appointment date" />
            <span asp-validation-for="UpdatedPayment.PaymentMethod" class="text-danger small mt-1"></span>
        </div>

        <div class="form-group mb-5">
            <label asp-for="UpdatedPayment.Name" class="form-label fw-semibold text-dark opacity-75 mb-2">
                <i class="bi bi-tag me-2"></i> Payment Name
            </label>
            <input asp-for="UpdatedPayment.Name" class="form-control form-control-lg border-dark-subtle shadow-sm" id="Name" placeholder="Enter appointment name" />
            <span asp-validation-for="UpdatedPayment.Name" class="text-danger small mt-1"></span>
        </div>

        <div class="form-group mb-5">
            <label asp-for="UpdatedPayment.Status" class="form-label fw-semibold text-dark opacity-75 mb-2">
                <i class="bi bi-tag me-2"></i> Status
            </label>
            <select asp-for="UpdatedPayment.Status" asp-items="Model.StatusList" class="form-select form-control-lg border-dark-subtle shadow-sm" id="Status"></select>
            <span asp-validation-for="UpdatedPayment.Status" class="text-danger small mt-1"></span>
        </div>

        <input type="hidden" asp-for="UpdatedPayment.CreatedBy" />
        <input type="hidden" asp-for="UpdatedPayment.LastUpdatedBy" />
        <input type="hidden" asp-for="UpdatedPayment.DeletedBy" />

        <input type="hidden" asp-for="UpdatedPayment.CreatedTime" />
        <input type="hidden" asp-for="UpdatedPayment.LastUpdatedTime" />
        <input type="hidden" asp-for="UpdatedPayment.DeletedTime" />

        <div class="mt-5 d-flex justify-content-between align-items-center">
            <button type="submit" class="btn btn-success fw-semibold px-5 py-3 rounded-pill shadow-md transition-all duration-300 hover:scale-105">
                <i class="bi bi-save me-2"></i> Save Changes
            </button>
            <a asp-page="./Index" type="button" class="btn btn-secondary fw-semibold px-5 py-3 rounded-pill shadow-md transition-all duration-300 hover:scale-105">
                <i class="bi bi-x-lg me-2"></i> Cancel
            </a>
        </div>
    </form>
</div>