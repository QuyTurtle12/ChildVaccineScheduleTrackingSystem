@page
@model RazorPage.Pages.Payments.UpdateModel
@{
    ViewData["Title"] = "Cập nhật Thanh toán - Trung tâm Vaccine";
}



<!-- Nội dung chính -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card lively-card animate__animated animate__fadeIn">
                <div class="card-body">
                    <h1 class="text-center text-vibrant mb-4 animate__animated animate__bounceIn">
                        <i class="fas fa-edit mr-2"></i>Cập nhật Thanh toán
                    </h1>
                    <form method="post">
                        <input asp-for="UpdatedPayment.Id" type="hidden" />
                        <div class="form-group" style="display: none;">
                            <label asp-for="UpdatedPayment.AppointmentId" class="font-weight-bold">ID Cuộc hẹn</label>
                            <input asp-for="UpdatedPayment.AppointmentId" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdatedPayment.Name" class="font-weight-bold">Tên thanh toán</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                </div>
                                <input asp-for="UpdatedPayment.Name" class="form-control" readonly />
                            </div>
                            <span asp-validation-for="UpdatedPayment.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdatedPayment.Amount" class="font-weight-bold">Số tiền (VNĐ)</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-money-bill"></i></span>
                                </div>
                                <input asp-for="UpdatedPayment.Amount" class="form-control" type="number" readonly/>
                            </div>
                            <span asp-validation-for="UpdatedPayment.Amount" class="text-danger"></span>
                        </div>
                        @* <div class="form-group">
                            <label asp-for="UpdatedPayment.PaymentMethod" class="font-weight-bold">Phương thức thanh toán</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-credit-card"></i></span>
                                </div>
                                <input asp-for="UpdatedPayment.PaymentMethod" class="form-control" />
                            </div>
                            <span asp-validation-for="UpdatedPayment.PaymentMethod" class="text-danger"></span>
                        </div> *@
                        <div class="form-group">
                            <label asp-for="UpdatedPayment.PaymentMethod" class="font-weight-bold">Phương thức thanh toán</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-credit-card"></i></span>
                                </div>
                                <select asp-for="UpdatedPayment.PaymentMethod" class="form-control">
                                    <option value="Online Banking">Online Banking</option>
                                    <option value="Cash">Cash</option>
                                </select>
                            </div>
                            <span asp-validation-for="UpdatedPayment.PaymentMethod" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdatedPayment.Status" class="font-weight-bold">Trạng thái</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
                                </div>
                                <select asp-for="UpdatedPayment.Status" asp-items="Model.StatusList" class="form-select"></select>
                            </div>
                            <span asp-validation-for="UpdatedPayment.Status" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="UpdatedPayment.CreatedBy" />
                        <input type="hidden" asp-for="UpdatedPayment.LastUpdatedBy" />
                        <input type="hidden" asp-for="UpdatedPayment.DeletedBy" />
                        <input type="hidden" asp-for="UpdatedPayment.CreatedTime" />
                        <input type="hidden" asp-for="UpdatedPayment.LastUpdatedTime" />
                        <input type="hidden" asp-for="UpdatedPayment.DeletedTime" />
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg animate__animated animate__pulse animate__infinite">
                                <i class="fas fa-save mr-2"></i>Lưu thay đổi
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary ml-2"><i class="fas fa-arrow-left mr-2"></i>Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chân trang -->


@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

