@page
@model RazorPage.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>User Management</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Full Name
            </th>
            <th>
                Email
            </th>
            <th>
                Role
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Address
            </th>
            <th>
                Status
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserDTOList.Items)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    @if (Model.UserDTOList != null)
    {
        @if (Model.UserDTOList.HasPreviousPage)
        {
            <a asp-page="./Index" asp-route-pageNumber="@(Model.UserDTOList.PageNumber - 1)" class="btn btn-primary">Previous</a>
        }

        <span>Page @Model.UserDTOList.PageNumber of @Model.UserDTOList.TotalPages</span>

        @if (Model.UserDTOList.HasNextPage)
        {
            <a asp-page="./Index" asp-route-pageNumber="@(Model.UserDTOList.PageNumber + 1)" class="btn btn-primary">Next</a>
        }
    }
</div>
