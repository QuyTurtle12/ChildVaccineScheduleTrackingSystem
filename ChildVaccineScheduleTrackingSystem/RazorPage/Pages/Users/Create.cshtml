@page
@using Data.Enum
@model RazorPage.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create User</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewUser.Name" class="control-label"></label>
                <input asp-for="NewUser.Name" class="form-control" />
                <span asp-validation-for="NewUser.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Email" class="control-label"></label>
                <input asp-for="NewUser.Email" class="form-control" />
                <span asp-validation-for="NewUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.RoleName" class="control-label"></label>
                <select asp-for="NewUser.RoleName" class="form-control" asp-items="Html.GetEnumSelectList<EnumRole>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.PhoneNumber" class="control-label"></label>
                <input asp-for="NewUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="NewUser.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Address" class="control-label"></label>
                <input asp-for="NewUser.Address" class="form-control" />
                <span asp-validation-for="NewUser.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Password" class="control-label"></label>
                <input asp-for="NewUser.Password" class="form-control" />
                <span asp-validation-for="NewUser.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.ConfirmedPassword" class="control-label"></label>
                <input asp-for="NewUser.ConfirmedPassword" class="form-control" />
                <span asp-validation-for="NewUser.ConfirmedPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
