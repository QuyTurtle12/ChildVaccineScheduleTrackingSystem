@page
@model RazorPage.Pages.Package.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Package</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Package.Name" class="control-label"></label>
                <input asp-for="Package.Name" class="form-control" />
                <span asp-validation-for="Package.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Description" class="control-label"></label>
                <input asp-for="Package.Description" class="form-control" />
                <span asp-validation-for="Package.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Price" class="control-label"></label>
                <input asp-for="Package.Price" class="form-control" />
                <span asp-validation-for="Package.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Type" class="control-label"></label>
                <select asp-for="Package.Type" asp-items="new SelectList(Model.Types)" class="form-control"></select>
                <span asp-validation-for="Package.Type" class="text-danger"></span>
            </div>
            <h4>Select Vaccines for Package</h4>
            <div class="form-group">
                @foreach (var vaccine in Model.AllVaccines)
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input"
                               name="Package.SelectedVaccineIds"
                               value="@vaccine.Id"/>
                        <label class="form-check-label">@vaccine.Name</label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
