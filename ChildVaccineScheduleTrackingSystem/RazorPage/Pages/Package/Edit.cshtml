@page
@model RazorPage.Pages.Package.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Package</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Package.Name" class="control-label"></label>
                <input asp-for="Package.Name" class="form-control" value="@Model.PackageGetDto.Name"/>
                <span asp-validation-for="Package.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Description" class="control-label"></label>
                <input asp-for="Package.Description" class="form-control" value="@Model.PackageGetDto.Description" />
                <span asp-validation-for="Package.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Price" class="control-label"></label>
                <input asp-for="Package.Price" class="form-control" value="@Model.PackageGetDto.Price"/>
                <span asp-validation-for="Package.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Type" class="control-label"></label>
                <input asp-for="Package.Type" class="form-control" value="@Model.PackageGetDto.Type" />
                <span asp-validation-for="Package.Type" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
