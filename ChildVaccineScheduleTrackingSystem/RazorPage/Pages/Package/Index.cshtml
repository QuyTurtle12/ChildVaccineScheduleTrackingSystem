@page
@model RazorPage.Pages.Package.IndexModel

@{
    ViewData["Title"] = "Packages";
}



<!-- Nội dung chính -->
<div class="container my-5">
    <h2 class="text-center mb-4 text-vibrant animate__animated animate__fadeIn">Danh sách gói vaccine</h2>
    <p class="text-muted text-center mb-4 animate__animated animate__fadeInUp">
        Quản lý các gói vaccine một cách dễ dàng và hiệu quả.
    </p>

    <!-- Nút Create -->
    <div class="text-center mb-4">
        <a asp-page="./Create" class="btn btn-success btn-lg animate__animated animate__pulse animate__infinite">
            <i class="fas fa-plus"></i> Tạo gói vaccine mới
        </a>
    </div>

    <!-- Danh sách gói vaccine -->
    <div class="card lively-card mb-4">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Tên gói</th>
                        <th>Mô tả</th>
                        <th>Giá</th>
                        <th>Loại</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Package)
                    {
                        <tr class="animate__animated animate__fadeInUp">
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>@Html.DisplayFor(modelItem => item.Type)</td>
                            <td>
                                <a class="btn btn-primary btn-modern btn-sm" asp-page="./Details" asp-route-id="@item.Id">
                                    <i class="fas fa-eye"></i> Chi tiết
                                </a>
                                <a class="btn btn-warning btn-modern btn-sm" asp-page="./Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a class="btn btn-danger btn-modern btn-sm" asp-page="./Delete" asp-route-id="@item.Id">
                                    <i class="fas fa-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



<!-- CSS và JS -->
@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f4f8;
        }

        .navbar {
            background-color: #0078D4 !important;
            color: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand, .nav-link {
            color: white !important;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #F28C38 !important;
            }

        .btn-primary {
            background-color: #0078D4;
            border: none;
            transition: transform 0.2s;
        }

            .btn-primary:hover {
                background-color: #005BB5;
                transform: scale(1.05);
            }

        .btn-success {
            background-color: #28A745;
            border: none;
            transition: transform 0.2s;
        }

            .btn-success:hover {
                background-color: #218838;
                transform: scale(1.05);
            }

        .text-vibrant {
            color: #F28C38;
            font-weight: bold;
        }

        .lively-card {
            border: none;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .lively-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
            }

        .footer {
            background-color: #0078D4;
            color: white;
            padding: 20px 0;
            text-align: center;
        }

        .btn-modern {
            transition: transform 0.2s;
        }

            .btn-modern:hover {
                transform: scale(1.05);
            }
    </style>
}