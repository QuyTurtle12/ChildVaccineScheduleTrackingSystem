        color: #F28C38;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #0078D4;
        border: none;
        transition: transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #005BB5;
            transform: scale(1.05);
        }

    .badge-success {
        background-color: #28A745;
    }

    .lively-row:hover {
        background-color: #e9f7ef;
        transition: background-color 0.3s;
    }

    .footer {
        background-color: #0078D4;
        color: white;
        padding: 20px 0;
