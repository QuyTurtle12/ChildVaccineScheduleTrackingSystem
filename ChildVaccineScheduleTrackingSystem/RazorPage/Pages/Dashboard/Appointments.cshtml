@page
@model RazorPage.Pages.Dashboard.AppointmentsModel
@{
    ViewData["Title"] = "Appointments";
}

<h1>Appointments</h1>

<!-- Search and filter form -->
<form method="get" class="mb-3">
    <div class="form-group">
        <label for="nameSearch">Search by Name:</label>
        <input type="text" name="nameSearch" id="nameSearch" class="form-control" value="@Model.NameSearch" />
    </div>
    <div class="form-group">
        <label for="fromDateSearch">From Date:</label>
        <input type="date" name="fromDateSearch" id="fromDateSearch" class="form-control" 
               value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" />
    </div>
    <div class="form-group">
        <label for="toDateSearch">To Date:</label>
        <input type="date" name="toDateSearch" id="toDateSearch" class="form-control" 
               value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>User</th>
            <th>Appointment Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model.AppointmentPage.Items)
        {
            <tr>
                <td>@appointment.Name</td>
                <td>@appointment.UserName</td>
                <td>@appointment.AppointmentDate.ToString("g")</td>
                <td>@appointment.Status</td>
            </tr>
        }
    </tbody>
</table>

<!-- Basic pagination controls -->
<nav>
    <ul class="pagination">
        @if (Model.AppointmentPage.PageNumber > 1)
        {
            <li class="page-item">
                <a class="page-link" href="?index=@(Model.AppointmentPage.PageNumber - 1)&pageSize=@Model.AppointmentPage.PageSize&nameSearch=@Model.NameSearch&fromDateSearch=@(Model.FromDate?.ToString("yyyy-MM-dd"))&toDateSearch=@(Model.ToDate?.ToString("yyyy-MM-dd"))">Previous</a>
            </li>
        }
        <li class="page-item active">
            <span class="page-link">@Model.AppointmentPage.PageNumber</span>
        </li>
        @if (Model.AppointmentPage.PageNumber * Model.AppointmentPage.PageSize < Model.AppointmentPage.TotalCount)
        {
            <li class="page-item">
                <a class="page-link" href="?index=@(Model.AppointmentPage.PageNumber + 1)&pageSize=@Model.AppointmentPage.PageSize&nameSearch=@Model.NameSearch&fromDateSearch=@(Model.FromDate?.ToString("yyyy-MM-dd"))&toDateSearch=@(Model.ToDate?.ToString("yyyy-MM-dd"))">Next</a>
            </li>
        }
    </ul>
</nav>
