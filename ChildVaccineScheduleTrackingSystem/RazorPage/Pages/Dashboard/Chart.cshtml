@page
@model RazorPage.Pages.Dashboard.ChartModel
@{
    ViewData["Title"] = "Appointments Chart";
}

<h1>Appointments Over Time</h1>

<canvas id="appointmentsChart" width="800" height="400"></canvas>

@section Scripts {
    <!-- Include Chart.js from a CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Parse the JSON data passed from the PageModel
        var chartData = @Html.Raw(Model.ChartDataJson);

        // Extract labels (dates) and data (counts)
        var labels = chartData.map(item => item.Date);
        var data = chartData.map(item => item.Count);

        // Initialize the chart
        var ctx = document.getElementById('appointmentsChart').getContext('2d');
        var appointmentsChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Appointments per Day',
                    data: data,
                    fill: false,
                    borderColor: 'rgba(75, 192, 192, 1)',
                    tension: 0.1
                }]
            },
            options: {
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Date'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Count'
                        },
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
