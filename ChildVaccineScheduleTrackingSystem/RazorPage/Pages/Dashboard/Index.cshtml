@page
@model RazorPage.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="mb-4">Dashboard Overview</h1>

<div class="row">
    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Appointments</h5>
                <p class="card-text display-4">@Model.AppointmentCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Feedbacks</h5>
                <p class="card-text display-4">@Model.FeedbackCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Payments</h5>
                <p class="card-text display-4">@Model.PaymentCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Vaccines</h5>
                <p class="card-text display-4">@Model.VaccineCount</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Vaccine Records</h5>
                <p class="card-text display-4">@Model.VaccineRecordCount</p>
            </div>
        </div>
    </div>
</div>
