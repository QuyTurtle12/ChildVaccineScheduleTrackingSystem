@page
@model RazorPage.Pages.ServicesModel

@{
    ViewData["Title"] = "Dịch vụ tiêm chủng & Bảng giá";
}

<!-- Tiêu đề và mô tả -->
<div class="container my-5">
    <h2 class="text-center mb-4 text-vibrant animate__animated animate__fadeIn">Dịch vụ tiêm chủng & Bảng giá</h2>
    <p class="text-muted text-center mb-5 animate__animated animate__fadeInUp">
        Khám phá các dịch vụ tiêm chủng và gói vaccine của chúng tôi, được thiết kế để bảo vệ sức khỏe của bạn và gia đình.
    </p>

    <!-- Danh sách dịch vụ -->
    <h3 class="text-vibrant mb-4 animate__animated animate__fadeIn">Các dịch vụ tiêm chủng</h3>
    <div class="row">
        @foreach (var service in Model.Services)
        {
            <div class="col-md-6 mb-4">
                <div class="card lively-card animate__animated animate__fadeInUp">
                    <div class="card-body">
                        <h5 class="card-title text-vibrant"><i class="fas fa-syringe me-2"></i>@service.Name</h5>
                        <p class="card-text text-muted">@service.Description</p>
                        <p class="card-text"><strong>Giá: </strong>@service.Price.ToString("N0") VNĐ</p>
                        <a href="/Appointments/Create" class="btn btn-primary btn-modern">
                            <i class="fas fa-calendar-check me-2"></i>Đặt lịch ngay
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Bảng giá -->
    <h3 class="text-vibrant mb-4 animate__animated animate__fadeIn">Bảng giá</h3>
    <div class="card lively-card mb-4">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Tên dịch vụ/gói</th>
                        <th>Mô tả</th>
                        <th>Giá (VNĐ)</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model.Services)
                    {
                        <tr class="animate__animated animate__fadeInUp">
                            <td>@service.Name</td>
                            <td>@service.Description</td>
                            <td>@service.Price.ToString("N0")</td>
                            <td>
                                <a href="/Appointments/Create" class="btn btn-primary btn-modern btn-sm">
                                    <i class="fas fa-calendar-check me-2"></i>Đặt lịch
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .lively-card {
            border: none;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .lively-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
            }
    </style>
}