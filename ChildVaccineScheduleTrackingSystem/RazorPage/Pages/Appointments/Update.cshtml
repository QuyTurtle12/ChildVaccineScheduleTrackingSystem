@page
@using Data.Enum
@model RazorPage.Pages.Appointments.UpdateModel
@{
    ViewData["Title"] = "Cập nhật Cuộc hẹn - Trung tâm Vaccine";
}



<!-- Nội dung chính -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card lively-card animate__animated animate__fadeIn">
                <div class="card-body">
                    <h1 class="text-center text-vibrant mb-4 animate__animated animate__bounceIn">
                        <i class="fas fa-edit mr-2"></i>Cập nhật Cuộc hẹn
                    </h1>
                    <form method="post">
                        <input asp-for="UpdatedAppointment.Id" type="hidden" />
                        <input asp-for="UpdatedAppointment.UserId" type="hidden" />
                        <div class="form-group">
                            <label asp-for="UpdatedAppointment.AppointmentDate" class="font-weight-bold">Ngày hẹn</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                </div>
                                <input asp-for="UpdatedAppointment.AppointmentDate" type="datetime-local" class="form-control" value="@Model.UpdatedAppointment.AppointmentDate.ToString("yyyy-MM-ddTHH:mm")" />
                            </div>
                            <span asp-validation-for="UpdatedAppointment.AppointmentDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdatedAppointment.Name" class="font-weight-bold">Tên cuộc hẹn</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                </div>
                                <input asp-for="UpdatedAppointment.Name" class="form-control" />
                            </div>
                            <span asp-validation-for="UpdatedAppointment.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdatedAppointment.Status" class="font-weight-bold">Trạng thái</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
                                </div>
                                @if (User.IsInRole("Staff"))
                                {
                                    <select asp-for="UpdatedAppointment.Status" asp-items="Model.StatusList" class="form-control"></select>
                                }
                                else if (User.IsInRole("Customer"))
                                {
                                    <select asp-for="UpdatedAppointment.Status" class="form-control">
                                        <option value="@((int)EnumAppointment.Canceled)">Đã hủy</option>
                                    </select>
                                }
                            </div>
                            <span asp-validation-for="UpdatedAppointment.Status" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="UpdatedAppointment.CreatedBy" />
                        <input type="hidden" asp-for="UpdatedAppointment.LastUpdatedBy" />
                        <input type="hidden" asp-for="UpdatedAppointment.DeletedBy" />
                        <input type="hidden" asp-for="UpdatedAppointment.CreatedTime" />
                        <input type="hidden" asp-for="UpdatedAppointment.LastUpdatedTime" />
                        <input type="hidden" asp-for="UpdatedAppointment.DeletedTime" />
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg animate__animated animate__pulse animate__infinite">
                                <i class="fas fa-save mr-2"></i>Lưu
                            </button>
                            <a class="btn btn-secondary ml-2" asp-page="./Index"><i class="fas fa-arrow-left mr-2"></i>Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
}

