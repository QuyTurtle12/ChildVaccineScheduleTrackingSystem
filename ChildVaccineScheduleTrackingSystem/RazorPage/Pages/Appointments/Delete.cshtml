@page
@model RazorPage.Pages.Appointments.DeleteModel
@{
    ViewData["Title"] = "Delete Appointment";
}


<div class="header">
    <h1>Delete Appointment</h1>
</div>

<div class="card-body p-4">
    <h3 class="warning-text animate__animated animate__fadeInUp">Are you sure you want to delete this?</h3>

    <div class="row dl-modern animate__animated animate__fadeInUp">
        <div class="col-sm-3 col-md-2">
            <dt>@Html.DisplayNameFor(model => model.Appointment.Name)</dt>
        </div>
        <dd class="col-sm-9 col-md-10">
            @Html.DisplayFor(model => model.Appointment.AppointmentDate)
        </dd>

        <div class="col-sm-3 col-md-2">
            <dt>@Html.DisplayNameFor(model => model.Appointment.Status)</dt>
        </div>
        <dd class="col-sm-9 col-md-10">
            @Html.DisplayFor(model => model.Appointment.Status)
        </dd>
    </div>

    <form method="post" class="mt-4 d-flex justify-content-end gap-2 animate__animated animate__fadeInUp">
        <input type="hidden" asp-for="Appointment.Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-modern" />
        <a asp-page="./Index" class="btn btn-outline-secondary btn-modern">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div>