@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Child Info</h1>

<h4>Child</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EditChild.Id" />
            <div class="form-group">
                <label asp-for="EditChild.Name" class="control-label"></label>
