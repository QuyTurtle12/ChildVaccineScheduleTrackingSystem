            </div>
            <div class="form-group">
                <label asp-for="EditChild.Age" class="control-label"></label>
                <input asp-for="EditChild.Age" class="form-control" />
                <span asp-validation-for="EditChild.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditChild.Status" class="control-label"></label>
                <input asp-for="EditChild.Status" class="form-control" />
                <span asp-validation-for="EditChild.Status" class="text-danger"></span>
            </div>
