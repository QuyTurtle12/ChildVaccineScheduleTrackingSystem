@page
@model RazorPage.Pages.RegisterModel
@{
    ViewData["Title"] = "Đăng ký - Trung tâm Vaccine";
}



<!-- Nội dung chính -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card lively-card animate__animated animate__fadeIn">
                <div class="card-body">
                    <h2 class="text-center text-vibrant mb-4 animate__animated animate__bounceIn">
                        <i class="fas fa-user-plus mr-2"></i>Đăng ký tài khoản
                    </h2>
                    <p class="text-center text-muted animate__animated animate__fadeInUp">
                        Tham gia ngay để đặt lịch tiêm vaccine dễ dàng!
                    </p>

                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-info text-center animate__animated animate__fadeIn">
                            <i class="fas fa-info-circle mr-2"></i>@Model.Message
                        </div>
                    }

                    <form method="post" class="mt-4">
                        <div asp-validation-summary="All" class="text-danger text-center mb-3 animate__animated animate__shakeX"></div>

                        <div class="form-group">
                            <label asp-for="RegisterDTO.Name" class="font-weight-bold">Họ và tên</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input asp-for="RegisterDTO.Name" class="form-control" placeholder="Nhập họ và tên" />
                            </div>
                            <span asp-validation-for="RegisterDTO.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="RegisterDTO.Email" class="font-weight-bold">Email</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                </div>
                                <input asp-for="RegisterDTO.Email" class="form-control" placeholder="Nhập email" />
                            </div>
                            <span asp-validation-for="RegisterDTO.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="RegisterDTO.Password" class="font-weight-bold">Mật khẩu</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                </div>
                                <input asp-for="RegisterDTO.Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                            </div>
                            <span asp-validation-for="RegisterDTO.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="RegisterDTO.ConfirmPassword" class="font-weight-bold">Xác nhận mật khẩu</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                </div>
                                <input asp-for="RegisterDTO.ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" />
                            </div>
                            <span asp-validation-for="RegisterDTO.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="RegisterDTO.PhoneNumber" class="font-weight-bold">Số điện thoại</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                </div>
                                <input asp-for="RegisterDTO.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                            </div>
                            <span asp-validation-for="RegisterDTO.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="RegisterDTO.Address" class="font-weight-bold">Địa chỉ</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                </div>
                                <input asp-for="RegisterDTO.Address" class="form-control" placeholder="Nhập địa chỉ" />
                            </div>
                            <span asp-validation-for="RegisterDTO.Address" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg animate__animated animate__pulse animate__infinite">
                                <i class="fas fa-user-check mr-2"></i>Đăng ký
                            </button>
                        </div>
                    </form>

                    <p class="text-center mt-3 text-muted">
                        Đã có tài khoản? <a href="/Login" class="text-primary">Đăng nhập ngay</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- CSS và JS -->
@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

