@page
@model RazorPage.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <h2 class="text-center">Register</h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info">@Model.Message</div>
    }

    <form method="post" class="mt-4">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="RegisterDTO.Name"></label>
            <input asp-for="RegisterDTO.Name" class="form-control" />
            <span asp-validation-for="RegisterDTO.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RegisterDTO.Email"></label>
            <input asp-for="RegisterDTO.Email" class="form-control" />
            <span asp-validation-for="RegisterDTO.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RegisterDTO.Password"></label>
            <input asp-for="RegisterDTO.Password" type="password" class="form-control" />
            <span asp-validation-for="RegisterDTO.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RegisterDTO.ConfirmPassword"></label>
            <input asp-for="RegisterDTO.ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="RegisterDTO.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RegisterDTO.PhoneNumber"></label>
            <input asp-for="RegisterDTO.PhoneNumber" class="form-control" />
            <span asp-validation-for="RegisterDTO.PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RegisterDTO.Address"></label>
            <input asp-for="RegisterDTO.Address" class="form-control" />
            <span asp-validation-for="RegisterDTO.Address" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Register</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
