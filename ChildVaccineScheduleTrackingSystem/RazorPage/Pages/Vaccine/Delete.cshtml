@page
@model RazorPage.Pages.Vaccine.DeleteModel
@{
    ViewData["Title"] = "Xóa Vaccine - Trung tâm Vaccine";
}



<!-- Nội dung chính -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card lively-card animate__animated animate__fadeIn">
                <div class="card-body">
                    <h1 class="text-center text-vibrant mb-4 animate__animated animate__bounceIn">
                        <i class="fas fa-trash mr-2"></i>Xóa Vaccine
                    </h1>
                    <h3 class="text-center text-danger mb-4">Bạn có chắc muốn xóa vaccine này?</h3>
                    <div class="row">
                        <div class="col-md-4 text-center">
                            
                            <h4>@Model.Vaccine.Name</h4>
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Nhà sản xuất</dt>
                                <dd class="col-sm-8">@Model.Vaccine.Manufacturer</dd>
                                <dt class="col-sm-4">Mô tả</dt>
                                <dd class="col-sm-8">@Model.Vaccine.Description</dd>
                                @* 
                                <dt class="col-sm-4">Người tạo</dt>
                                <dd class="col-sm-8">@Model.Vaccine.CreatedBy</dd>
                                <dt class="col-sm-4">Thời gian tạo</dt>
                                <dd class="col-sm-8">@Model.Vaccine.CreatedTime</dd>
                                <dt class="col-sm-4">Người cập nhật</dt>
                                <dd class="col-sm-8">@Model.Vaccine.LastUpdatedBy</dd>
                                <dt class="col-sm-4">Thời gian cập nhật</dt>
                                <dd class="col-sm-8">@Model.Vaccine.LastUpdatedTime</dd>
                                <dt class="col-sm-4">Người xóa</dt>
                                <dd class="col-sm-8">@Model.Vaccine.DeletedBy</dd>
                                <dt class="col-sm-4">Thời gian xóa</dt>
                                <dd class="col-sm-8">@Model.Vaccine.DeletedTime</dd> 
                                *@
                            </dl>
                        </div>
                    </div>
                    <form method="post" class="text-center mt-4">
                        <input type="hidden" asp-for="Vaccine.Id" />
                        <input type="submit" value="Xóa" class="btn btn-danger btn-lg animate__animated animate__pulse animate__infinite" />
                        <a asp-page="./Index" class="btn btn-secondary ml-2"><i class="fas fa-arrow-left"></i> Quay lại</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chân trang -->


@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
