@page
@model RazorPage.Pages.Vaccine.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Vaccine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UpdatedVaccine.Manufacturer" class="control-label"></label>
                <input asp-for="UpdatedVaccine.Manufacturer" class="form-control" value="@Model.Vaccine.Manufacturer"/>
                <span asp-validation-for="UpdatedVaccine.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedVaccine.Description" class="control-label"></label>
                <input asp-for="UpdatedVaccine.Description" class="form-control" value="@Model.Vaccine.Description" />
                <span asp-validation-for="UpdatedVaccine.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedVaccine.Name" class="control-label"></label>
                <input asp-for="UpdatedVaccine.Name" class="form-control" value="@Model.Vaccine.Name" />
                <span asp-validation-for="UpdatedVaccine.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Status</label>
                <div class="text-@(Model.Vaccine.Status == 1 ? "success" : "danger")">
                    @(Model.Vaccine.Status == 1 ? "Active" : "Inactive")
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
