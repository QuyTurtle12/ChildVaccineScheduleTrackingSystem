@page
@model RazorPage.Pages.Vaccine.IndexModel
@{
    ViewData["Title"] = "Danh sách Vaccine - Trung tâm Vaccine";
}

<!-- Nội dung chính -->
<div class="container my-5">
    <h1 class="text-center text-vibrant mb-4 animate__animated animate__bounceIn">
        <i class="fas fa-syringe mr-2"></i>Danh sách Vaccine
    </h1>
    <p class="text-center mb-4">
        <a asp-page="Create" class="btn btn-success"><i class="fas fa-plus mr-2"></i>Thêm Vaccine mới</a>
    </p>
    <div class="table-responsive">
        <table class="table table-hover animate__animated animate__fadeIn">
            <thead class="thead-light">
                <tr>
                    <th>Hình ảnh</th>
                    <th>Nhà sản xuất</th>
                    <th>Tên Vaccine</th>
                    <th>Mô tả</th>
                    <th>Đơn giá</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Vaccine)
                {
                    <tr class="lively-row">
                        <td>
                            <img src="@item.ImageUrl" alt="@item.Name" class="vaccine-img" />
                        </td>
                        <td>@item.Manufacturer</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                        <td>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f4f8;
    }

    .navbar {
        background-color: #0078D4 !important;
        color: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .navbar-brand, .nav-link {
        color: white !important;
        transition: color 0.3s;
    }

        .nav-link:hover {
            color: #F28C38 !important;
        }

    .text-vibrant {
        color: #F28C38;
        font-weight: bold;
    }

    .btn-success {
        background-color: #28A745;
        border: none;
        transition: transform 0.2s;
    }

        .btn-success:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .vaccine-img {
        max-width: 50px;
        border-radius: 5px;
    }

    .lively-row:hover {
        background-color: #e9f7ef;
        transition: background-color 0.3s;
    }

    .footer {
        background-color: #0078D4;
        color: white;
        padding: 20px 0;
        text-align: center;
    }
</style>