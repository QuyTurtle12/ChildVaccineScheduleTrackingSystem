@model RazorPage.Pages.Vaccine.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Vaccine</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Manufacturer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vaccine.Manufacturer)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vaccine.Description)
        </dd>
