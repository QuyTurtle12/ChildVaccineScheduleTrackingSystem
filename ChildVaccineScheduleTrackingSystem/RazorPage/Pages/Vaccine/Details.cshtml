@page
@model RazorPage.Pages.Vaccine.DetailsModel
@{
    ViewData["Title"] = "Chi tiết Vaccine - Trung tâm Vaccine";
}



<!-- Nội dung chính -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card lively-card animate__animated animate__fadeIn">
                <div class="card-body">
                    <h1 class="text-center text-vibrant mb-4 animate__animated animate__bounceIn">
                        <i class="fas fa-eye mr-2"></i>Chi tiết Vaccine
                    </h1>
                    <div class="row">
                        <div class="col-md-4 text-center">
                            
                            <h4>@Model.Vaccine.Name</h4>
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Nhà sản xuất</dt>
                                <dd class="col-sm-8">@Model.Vaccine.Manufacturer</dd>
                                <dt class="col-sm-4">Mô tả</dt>
                                <dd class="col-sm-8">@Model.Vaccine.Description</dd>
                                @* <dt class="col-sm-4">Người tạo</dt>
                                <dd class="col-sm-8">@Model.Vaccine.CreatedBy</dd>
                                <dt class="col-sm-4">Thời gian tạo</dt>
                                <dd class="col-sm-8">@Model.Vaccine.CreatedTime</dd>
                                <dt class="col-sm-4">Người cập nhật</dt>
                                <dd class="col-sm-8">@Model.Vaccine.LastUpdatedBy</dd>
                                <dt class="col-sm-4">Thời gian cập nhật</dt>
                                <dd class="col-sm-8">@Model.Vaccine.LastUpdatedTime</dd>
                                <dt class="col-sm-4">Người xóa</dt>
                                <dd class="col-sm-8">@Model.Vaccine.DeletedBy</dd>
                                <dt class="col-sm-4">Thời gian xóa</dt>
                                <dd class="col-sm-8">@Model.Vaccine.DeletedTime</dd> *@
                            </dl>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        @if (Model.UserRole == "staff")
                        {
                            <a asp-page="./Edit" asp-route-id="@Model.Vaccine.Id" class="btn btn-primary mr-2"><i class="fas fa-edit"></i> Sửa</a>
                            <a asp-page="./Delete" asp-route-id="@Model.Vaccine.Id" class="btn btn-danger mr-2"><i class="fas fa-trash"></i> Xóa</a>
                        }
                        <a asp-page="./Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chân trang -->


@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f4f8;
    }

    .navbar {
        background-color: #0078D4 !important;
        color: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .navbar-brand, .nav-link {
        color: white !important;
        transition: color 0.3s;
    }

        .nav-link:hover {
            color: #F28C38 !important;
        }

    .lively-card {
        border: none;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        background-color: white;
        border-radius: 10px;
    }

        .lively-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

    .text-vibrant {
        color: #F28C38;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #0078D4;
        border: none;
        transition: transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #005BB5;
