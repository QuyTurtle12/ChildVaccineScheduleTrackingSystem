            @Html.DisplayFor(model => model.Vaccine.LastUpdatedTime)
        </dd>
        <dt class="col-sm-2">
            Deleted Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vaccine.DeletedTime)
        </dd>
    </dl>
