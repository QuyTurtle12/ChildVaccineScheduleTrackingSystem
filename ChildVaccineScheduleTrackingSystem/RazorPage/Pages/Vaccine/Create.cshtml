@page
@model RazorPage.Pages.Vaccine.CreateModel
@{
    ViewData["Title"] = "Thêm Vaccine - Trung tâm Vaccine";
}



<!-- Nội dung chính -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card lively-card animate__animated animate__fadeIn">
                <div class="card-body">
                    <h1 class="text-center text-vibrant mb-4 animate__animated animate__bounceIn">
                        <i class="fas fa-plus mr-2"></i>Thêm Vaccine
                    </h1>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3 animate__animated animate__shakeX"></div>
                        <div class="form-group">
                            <label asp-for="Vaccine.Name" class="font-weight-bold">Tên Vaccine</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-syringe"></i></span>
                                </div>
                                <input asp-for="Vaccine.Name" class="form-control" placeholder="Nhập tên vaccine" />
                            </div>
                            <span asp-validation-for="Vaccine.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Vaccine.Manufacturer" class="font-weight-bold">Nhà sản xuất</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-industry"></i></span>
                                </div>
                                <input asp-for="Vaccine.Manufacturer" class="form-control" placeholder="Nhập nhà sản xuất" />
                            </div>
                            <span asp-validation-for="Vaccine.Manufacturer" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Vaccine.Description" class="font-weight-bold">Mô tả</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
                                </div>
                                <input asp-for="Vaccine.Description" class="form-control" placeholder="Nhập mô tả" />
                            </div>
                            <span asp-validation-for="Vaccine.Description" class="text-danger"></span>
                        </div>
                        
                        <div class="text-center">
                            <input type="submit" value="Thêm mới" class="btn btn-success btn-lg animate__animated animate__pulse animate__infinite" />
                        </div>
                    </form>
                    <p class="text-center mt-3"><a asp-page="Index" class="text-primary"><i class="fas fa-arrow-left mr-2"></i>Quay lại danh sách</a></p>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

