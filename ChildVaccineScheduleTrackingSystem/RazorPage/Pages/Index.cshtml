@page
@model IndexModel
@{
    ViewData["Title"] = "Trung tâm Vaccine";
}



<!-- Banner -->
<div class="jumbotron text-center">
    <h1 class="display-4 animate__animated animate__bounceIn">Vaccine - Lá chắn cho cuộc sống</h1>
    <p class="lead animate__animated animate__fadeInUp">Bảo vệ sức khỏe gia đình bạn với những liều vaccine chất lượng nhất!</p>
  
</div>

<!-- Nội dung chính -->
<div class="container my-5">
    <h2 class="text-center mb-4 text-vibrant">Chào mừng đến với Trung tâm Vaccine</h2>
    <p class="text-muted text-center mb-4">Cùng chúng tôi mang đến sức khỏe và niềm vui cho mọi nhà.</p>

    <div class="row">
        <div class="col-md-6">
            <div class="card lively-card mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-syringe fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Vaccine chất lượng</h5>
                    <p class="card-text">Được nhập khẩu từ các nhà sản xuất hàng đầu thế giới.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card lively-card mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-heartbeat fa-3x text-danger mb-3"></i>
                    <h5 class="card-title">Sức khỏe bền vững</h5>
                    <p class="card-text">Bảo vệ bạn khỏi các bệnh nguy hiểm mỗi ngày.</p>
                </div>
            </div>
        </div>
    </div>

    @if (ViewData["JwtToken"] != null)
    {
        <div class="alert alert-success text-center animate__animated animate__fadeIn">
            <p><i class="fas fa-check-circle mr-2"></i>Đã đăng nhập thành công! Chào mừng bạn trở lại.</p>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center animate__animated animate__fadeIn">
            <p><i class="fas fa-info-circle mr-2"></i>Đăng nhập để đặt lịch và khám phá thêm dịch vụ!</p>
            <a href="/Login" class="btn btn-primary">Đăng nhập ngay</a>
        </div>
    }
</div>


<!-- CSS và JS -->
@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const jwtToken = "@ViewData["JwtToken"]";
        if (jwtToken) {
            console.log("JWT Token: " + jwtToken);

            function parseJwt(token) {
                var base64Url = token.split('.')[1];
                var base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
                var jsonPayload = decodeURIComponent(atob(base64).split('').map(function (c) {
                    return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);
                }).join(''));
                return JSON.parse(jsonPayload);
            }

            const claims = parseJwt(jwtToken);
            console.log("JWT Claims:", claims);
            for (const key in claims) {
                if (claims.hasOwnProperty(key)) {
                    console.log(`${key}: ${claims[key]}`);
                }
            }
        }
    </script>
}

