@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Welcome</h1>
    <p class="lead">Learn about <a href="https://learn.microsoft.com/aspnet/core" class="text-primary">building Web apps with ASP.NET Core</a>.</p>
    <hr class="my-4">
    <p class="text-muted">Explore the documentation to get started with building modern web applications.</p>
</div>

<script>
    const jwtToken = "@ViewData["JwtToken"]";
    if (jwtToken) {
        console.log("JWT Token: " + jwtToken);

        // Function to decode JWT token payload
        function parseJwt(token) {
            var base64Url = token.split('.')[1];
            var base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
            var jsonPayload = decodeURIComponent(atob(base64).split('').map(function (c) {
                return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);
            }).join(''));
            return JSON.parse(jsonPayload);
        }

        // Decode the token and log each claim with its value
        const claims = parseJwt(jwtToken);
        console.log("JWT Claims:", claims);
        for (const key in claims) {
            if (claims.hasOwnProperty(key)) {
                console.log(`${key}: ${claims[key]}`);
            }
        }
    }
</script>
