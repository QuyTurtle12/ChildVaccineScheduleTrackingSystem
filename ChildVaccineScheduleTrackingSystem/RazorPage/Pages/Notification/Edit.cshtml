@page
@model RazorPage.Pages.Notification.EditModel
@{
    ViewData["Title"] = "Edit Notification";
}

<h1>Edit Notification</h1>

<form method="post">
    <input type="hidden" asp-for="PutNotification.Id" />
    <div class="form-group">
        <label asp-for="PutNotification.Message" class="control-label"></label>
        <textarea asp-for="PutNotification.Message" class="form-control"></textarea>
        <span asp-validation-for="PutNotification.Message" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PutNotification.Status" class="control-label"></label>
        <select asp-for="PutNotification.Status" class="form-control">
            <option value="1">Active</option>
            <option value="0">Deleted</option>
        </select>
        <span asp-validation-for="PutNotification.Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}