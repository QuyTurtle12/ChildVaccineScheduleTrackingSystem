@page
@model RazorPage.Pages.Notification.DeleteModel
@{
    ViewData["Title"] = "Xóa Thông báo - Trung tâm Vaccine";
}



<!-- Nội dung chính -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card lively-card animate__animated animate__fadeIn">
                <div class="card-body">
                    <h1 class="text-center text-vibrant mb-4 animate__animated animate__bounceIn">
                        <i class="fas fa-trash mr-2"></i>Xóa Thông báo
                    </h1>
                    <h3 class="text-center text-danger mb-4 animate__animated animate__fadeInUp">Bạn có chắc muốn xóa thông báo này?</h3>
                    <dl class="row">
                        <dt class="col-sm-4">ID Người dùng</dt>
                        <dd class="col-sm-8">@Model.Notification.UserId</dd>
                        <dt class="col-sm-4">Thông điệp</dt>
                        <dd class="col-sm-8">@Model.Notification.Message</dd>
                        <dt class="col-sm-4">Trạng thái</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Notification.Status == 1 ? "badge-success" : "badge-danger")">
                                @(Model.Notification.Status == 1 ? "Kích hoạt" : "Đã xóa")
                            </span>
                        </dd>
                    </dl>
                    <form method="post" class="text-center mt-4">
                        <button type="submit" class="btn btn-danger btn-lg animate__animated animate__pulse animate__infinite">
                            <i class="fas fa-trash mr-2"></i>Xóa
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary ml-2"><i class="fas fa-arrow-left mr-2"></i>Quay lại</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f4f8;
    }

    .navbar {
        background-color: #0078D4 !important;
        color: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .navbar-brand, .nav-link {
        color: white !important;
        transition: color 0.3s;
    }

        .nav-link:hover {
            color: #F28C38 !important;
        }

    .lively-card {
        border: none;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        background-color: white;
        border-radius: 10px;
    }

        .lively-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

    .text-vibrant {
        color: #F28C38;
        font-weight: bold;
    }

    .btn-danger {
        transition: transform 0.2s;
    }

        .btn-danger:hover {
            transform: scale(1.05);
        }

    .badge-success {
        background-color: #28A745;
    }

    .badge-danger {
        background-color: #DC3545;
    }

    .footer {
        background-color: #0078D4;
        color: white;
        padding: 20px 0;
        text-align: center;
    }
</style>