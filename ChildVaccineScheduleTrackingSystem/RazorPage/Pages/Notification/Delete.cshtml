@page
@model RazorPage.Pages.Notification.DeleteModel
@{
    ViewData["Title"] = "Delete Notification";
}

<h1>Delete Notification</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Notification</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User ID
        </dt>
        <dd class="col-sm-10">
            @Model.Notification.UserId
        </dd>
        <dt class="col-sm-2">
            Message
        </dt>
        <dd class="col-sm-10">
            @Model.Notification.Message
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @(Model.Notification.Status == 1 ? "Active" : "Deleted")
        </dd>
    </dl>

    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>