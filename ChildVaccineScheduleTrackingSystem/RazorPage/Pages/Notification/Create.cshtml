@page
@model RazorPage.Pages.Notification.CreateModel
@{
    ViewData["Title"] = "Tạo Thông báo - Trung tâm Vaccine";
}



<!-- Nội dung chính -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card lively-card animate__animated animate__fadeIn">
                <div class="card-body">
                    <h1 class="text-center text-vibrant mb-4 animate__animated animate__bounceIn">
                        <i class="fas fa-plus mr-2"></i>Tạo Thông báo
                    </h1>
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="PostNotification.email" class="font-weight-bold">Email</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                </div>
                                <input asp-for="PostNotification.email" class="form-control" placeholder="Nhập email người nhận" />
                            </div>
                            <span asp-validation-for="PostNotification.email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PostNotification.Message" class="font-weight-bold">Thông điệp</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-comment"></i></span>
                                </div>
                                <textarea asp-for="PostNotification.Message" class="form-control" rows="5" placeholder="Nhập nội dung thông báo"></textarea>
                            </div>
                            <span asp-validation-for="PostNotification.Message" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg animate__animated animate__pulse animate__infinite">
                                <i class="fas fa-save mr-2"></i>Tạo mới
                            </button>
                            <a class="btn btn-secondary ml-2" asp-page="./Index"><i class="fas fa-arrow-left mr-2"></i>Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

