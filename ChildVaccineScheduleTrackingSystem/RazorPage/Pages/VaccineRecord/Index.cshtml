@page
@model RazorPage.Pages.VaccineRecord.IndexModel
@{
    ViewData["Title"] = "Danh sách Hồ sơ Vaccine - Trung tâm Vaccine";
}



<!-- Nội dung chính -->
<div class="container my-5">
    <h1 class="text-center text-vibrant mb-4 animate__animated animate__bounceIn">
        <i class="fas fa-syringe mr-2"></i>Danh sách Hồ sơ Vaccine
    </h1>

    <!-- Nút tạo mới -->
    @if(Model.UserRole == "staff"){
        <p class="text-center mb-4">
            <a asp-page="Create" class="btn btn-success"><i class="fas fa-plus mr-2"></i>Thêm Hồ sơ Vaccine</a>
        </p>
    }
    
    <!-- Bảng danh sách -->
    <div class="table-responsive">
        <table class="table table-hover animate__animated animate__fadeIn">
            <thead class="thead-light">
                <tr>
                    <th>Vaccine</th>
                    <th>Trẻ em</th>
                    <th>Ngày tiêm</th>
                    <th>Liều tiếp theo</th>
                    <th>Ghi chú</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.VaccineRecord)
                {
                    <tr class="lively-row">
                        <td>@Html.DisplayFor(modelItem => item.VaccineName)</td>
                        <td>@Html.DisplayFor(modelItem => item.ChildName)</td>
                        <td>@item.DateAdministered.ToString("dd-MM-yyyy hh:mm:ss")</td>
                        <td>@item.NextDoseDue.ToString("dd-MM-yyyy hh:mm:ss")</td>
                        <td>@Html.DisplayFor(modelItem => item.CustomerNote)</td>
                        <td>
                            <a class="btn btn-info btn-sm mr-2" asp-page="./Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i> Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


