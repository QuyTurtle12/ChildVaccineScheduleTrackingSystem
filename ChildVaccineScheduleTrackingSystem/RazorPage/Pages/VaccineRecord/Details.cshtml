@page
@model RazorPage.Pages.VaccineRecord.DetailsModel
@{
    ViewData["Title"] = "Chi tiết Hồ sơ Vaccine - Trung tâm Vaccine";
}

<!-- Nội dung chính -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card lively-card animate__animated animate__fadeIn">
                <div class="card-body">
                    <h1 class="text-center text-vibrant mb-4 animate__animated animate__bounceIn">
                        <i class="fas fa-info-circle mr-2"></i>Chi tiết Hồ sơ Vaccine
                    </h1>
                    <dl class="row">
                        <dt class="col-sm-4">Vaccine</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.VaccineRecord.VaccineName)</dd>
                        <dt class="col-sm-4">Trẻ em</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.VaccineRecord.ChildName)</dd>
                        <dt class="col-sm-4">Ngày tiêm</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.VaccineRecord.DateAdministered)</dd>
                        <dt class="col-sm-4">Liều tiếp theo</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.VaccineRecord.NextDoseDue)</dd>
                        <dt class="col-sm-4">Ghi chú</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.VaccineRecord.CustomerNote)</dd>
                    </dl>
                    <div class="text-center mt-4">
                        <a class="btn btn-primary mr-2" asp-page="./Edit" asp-route-id="@Model.VaccineRecord.Id"><i class="fas fa-edit mr-2"></i>Sửa</a>
                        @if(Model.UserRole == "staff"){
                            <a class="btn btn-danger mr-2" asp-page="./Delete" asp-route-id="@Model.VaccineRecord.Id"><i class="fas fa-trash mr-2"></i>Xóa</a>
                        }
                        <a class="btn btn-secondary" asp-page="./Index"><i class="fas fa-arrow-left mr-2"></i>Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
}

