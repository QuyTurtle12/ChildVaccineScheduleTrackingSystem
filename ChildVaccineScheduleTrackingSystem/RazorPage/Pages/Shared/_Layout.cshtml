@{
    var jwtToken = ViewContext.HttpContext.Session.GetString("jwt_token");
    string adminRole = "Admin";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trung tâm Vaccine</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorPage.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Loading Overlay -->
    <div id="loadingOverlay" class="loading-overlay">
        <div class="vaccine-spinner">
            <div class="custom-spinner">
                <i class="fas fa-syringe"></i>
            </div>
            <p class="loading-text animate__animated animate__pulse animate__infinite">Đang tải dữ liệu vaccine...</p>
        </div>
    </div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container">
                <a class="navbar-brand animate__animated animate__fadeIn" asp-area="" asp-page="/Index">Trung tâm Vaccine</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link animate__animated animate__fadeIn" asp-area="" asp-page="/Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link animate__animated animate__fadeIn" asp-area="" asp-page="/Vaccine/Index">Danh sách vaccine</a>
                        </li>
                    </ul>
                    <button class="btn btn-primary btn-modern animate__animated animate__pulse" data-bs-toggle="modal" data-bs-target="#menuModal">
                        <i class="fas fa-bars"></i> Menu
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <!-- Modal -->
    <div class="modal fade" id="menuModal" tabindex="-1" aria-labelledby="menuModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content animate__animated animate__fadeIn">
                <div class="modal-header">
                    <h5 class="modal-title text-vibrant" id="menuModalLabel"><i class="fas fa-list-ul me-2"></i>Menu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <ul class="list-group">
                        <li class="list-group-item animate__animated animate__fadeInUp">
                            <a asp-area="" asp-page="/Privacy"><i class="fas fa-shield-alt me-2"></i>Privacy</a>
                        </li>
                        <li class="list-group-item animate__animated animate__fadeInUp">
                            <a asp-area="" asp-page="/Package/Index"><i class="fas fa-box me-2"></i>Package</a>
                        </li>
                        <li class="list-group-item animate__animated animate__fadeInUp">
                            <a asp-area="" asp-page="/Children/Index"><i class="fas fa-child me-2"></i>View Children</a>
                        </li>
                        <li class="list-group-item animate__animated animate__fadeInUp">
                            <a asp-area="" asp-page="/Feedback/Index"><i class="fas fa-comment-dots me-2"></i>Feedback</a>
                        </li>
                        <li class="list-group-item animate__animated animate__fadeInUp">
                            <a asp-area="" asp-page="/Notification/Index"><i class="fas fa-bell me-2"></i>Notification</a>
                        </li>
                        <li class="list-group-item animate__animated animate__fadeInUp">
                            <a asp-area="" asp-page="/VaccineRecord/Index"><i class="fas fa-syringe me-2"></i>Vaccine Record</a>
                        </li>
                        <li class="list-group-item animate__animated animate__fadeInUp">
                            <a asp-area="" asp-page="/Appointments/Index"><i class="fas fa-calendar-check me-2"></i>Appointment</a>
                        </li>
                        <li class="list-group-item animate__animated animate__fadeInUp">
                            <a asp-area="" asp-page="/Payments/Index"><i class="fas fa-credit-card me-2"></i>Payment</a>
                        </li>
                        @if(User.IsInRole("Staff")){
                            <li class="list-group-item animate__animated animate__fadeInUp">
                                <a asp-area="" asp-page="/Vaccine/Index"><i class="fas fa-credit-card me-2"></i>Vaccine</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="list-group-item animate__animated animate__fadeInUp">
                                <a asp-area="" asp-page="/Users/Index"><i class="fas fa-users me-2"></i>User Management</a>
                            </li>
                            <li class="list-group-item animate__animated animate__fadeInUp">
                                <a href="/Dashboard/Appointments"><i class="fas fa-calendar-alt me-2"></i>Appointments</a>
                            </li>
                            <li class="list-group-item animate__animated animate__fadeInUp">
                                <a href="/Dashboard/Reports"><i class="fas fa-chart-bar me-2"></i>Overview</a>
                            </li>
                        }

                        <li class="list-group-item animate__animated animate__fadeInUp">
                            @if (jwtToken == null)
                            {
                                <a asp-area="" asp-page="/Login"><i class="fas fa-sign-in-alt me-2"></i>Login</a>
                                <span class="mx-2">|</span>
                                <a asp-area="" asp-page="/Register"><i class="fas fa-user-plus me-2"></i>Register</a>
                            }
                            else
                            {
                                <form method="post" asp-area="" asp-page="/Logout" class="d-inline">
                                    <button type="submit" class="btn btn-link text-danger" style="padding: 0; border: none;">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </button>
                                </form>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container text-center">
            <p>
                © 2025 Trung tâm Vaccine. Hotline: <span class="text-vibrant">028 7102 6595</span> |
                <a asp-area="" asp-page="/Privacy" class="text-white">Privacy</a>
            </p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f4f8;
        }

        /* Navbar */
        .navbar {
            background-color: #0078D4 !important;
            color: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 1rem;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: white !important;
            transition: color 0.3s;
        }

        .nav-link {
            font-weight: bold;
            color: white !important;
            transition: color 0.3s;
        }

        .nav-link:hover {
            color: #F28C38 !important;
        }

        /* Nút Menu */
        .btn-primary {
            background-color: #28A745;
            border: none;
            transition: transform 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

        /* Modal */
        .modal-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
        }

        .modal-title {
            font-weight: bold;
            color: #F28C38;
        }

        .list-group-item {
            font-size: 1.1rem;
            border: none;
            padding: 0.75rem 1.25rem;
        }

        .list-group-item a {
            color: #343a40;
            text-decoration: none;
            transition: color 0.3s;
        }

        .list-group-item a:hover {
            color: #0078D4;
        }

        /* Footer */
        .footer {
            background-color: #0078D4;
            color: white;
            padding: 2px 0;
            text-align: center;
        }

        .footer a {
            color: white;
            text-decoration: none;
            transition: color 0.3s;
        }

        .footer a:hover {
            color: #F28C38;
        }

        /* Hiệu ứng */
        .btn-modern {
            transition: transform 0.3s ease;
        }

        .btn-modern:hover {
            transform: scale(1.05);
        }

        .text-vibrant {
            color: #F28C38;
            font-weight: bold;
        }

        /* Loading Overlay */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(0, 120, 212, 0.9), rgba(0, 91, 181, 0.9)); /* Gradient xanh dương */
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            opacity: 0;
            transition: opacity 0.3s ease-in-out; /* Hiệu ứng mờ dần */
        }

        .loading-overlay.show {
            display: flex;
            opacity: 1;
        }

        .vaccine-spinner {
            text-align: center;
            position: relative;
        }

        .custom-spinner {
            position: relative;
            width: 60px;
            height: 60px;
            margin: 0 auto 1rem;
        }

        .custom-spinner i {
            font-size: 3rem;
            color: #F28C38;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            animation: vaccine-pulse 1.5s infinite ease-in-out, vaccine-rotate 2s infinite linear;
        }

        /* Vòng tròn xung quanh spinner */
        .custom-spinner::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 4px solid transparent;
            border-top: 4px solid #28A745; /* Màu xanh lá */
            border-radius: 50%;
            animation: spin 1s infinite linear;
        }

        .custom-spinner::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 4px solid transparent;
            border-bottom: 4px solid #F28C38; /* Màu cam */
            border-radius: 50%;
            animation: spin 1.5s infinite linear reverse;
        }

        .loading-text {
            font-size: 1.3rem;
            font-weight: bold;
            background: linear-gradient(90deg, #F28C38, #28A745); /* Gradient chữ */
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        /* Hiệu ứng pulse cho biểu tượng vaccine */
        keyframes vaccine-pulse {
            0% {
                transform: translate(-50%, -50%) scale(1);
                opacity: 1;
            }
            50% {
                transform: translate(-50%, -50%) scale(1.2);
                opacity: 0.7;
            }
            100% {
                transform: translate(-50%, -50%) scale(1);
                opacity: 1;
            }
        }

        /* Hiệu ứng xoay cho biểu tượng vaccine */
        keyframes vaccine-rotate {
            0% {
                transform: translate(-50%, -50%) rotate(0deg);
            }
            100% {
                transform: translate(-50%, -50%) rotate(360deg);
            }
        }

        /* Hiệu ứng xoay cho vòng tròn */
        keyframes spin {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }
    </style>

    <script>
        // Hiển thị loading khi nhấp vào liên kết
        document.addEventListener('DOMContentLoaded', function () {
            // Bắt sự kiện nhấp vào tất cả các liên kết
            document.querySelectorAll('a:not([href^="#"]):not([data-bs-toggle])').forEach(link => {
                link.addEventListener('click', function (e) {
                    // Hiển thị loading overlay
                    const overlay = document.getElementById('loadingOverlay');
                    overlay.style.display = 'flex';
                    overlay.classList.add('show');
                });
            });

            // Ẩn loading khi trang đã tải xong
            window.addEventListener('load', function () {
                setTimeout(function () {
                    const overlay = document.getElementById('loadingOverlay');
                    overlay.classList.remove('show');
                    setTimeout(() => {
                        overlay.style.display = 'none';
                    }, 300); // Đợi hiệu ứng mờ dần hoàn tất
                }, 1200); // Hiển thị tối thiểu 1200ms
            });
        });
    </script>
</body>
</html>